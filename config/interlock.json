{
  "server": {
    "name": "skill-builder",
    "port": 3029,
    "version": "1.0.0"
  },
  "signals": {
    "listen": [
      { "code": "0xF0", "name": "EXPERIENCE_RECORDED", "from": "experience-layer" },
      { "code": "0xF1", "name": "PATTERN_EMERGED", "from": "experience-layer" },
      { "code": "0xF2", "name": "LESSON_EXTRACTED", "from": "experience-layer" },
      { "code": "0xFF", "name": "OPERATION_COMPLETE", "from": "*" },
      { "code": "0x00", "name": "HEARTBEAT", "from": "*" }
    ],
    "emit": [
      { "code": "0xA0", "name": "SKILL_CREATED", "to": ["consciousness", "experience-layer"] },
      { "code": "0xA1", "name": "SKILL_MATCHED", "to": ["consciousness"] },
      { "code": "0xA2", "name": "SKILL_USED", "to": ["experience-layer"] },
      { "code": "0xA3", "name": "SKILL_DEPRECATED", "to": ["consciousness"] },
      { "code": "0xA4", "name": "SKILL_VALIDATION_FAILED", "to": ["consciousness"] }
    ]
  },
  "peers": [
    { "name": "consciousness", "port": 3028 },
    { "name": "experience-layer", "port": 3031 },
    { "name": "tenets-server", "port": 3027 },
    { "name": "context-guardian", "port": 3001 },
    { "name": "tool-registry", "port": 3004 },
    { "name": "trinity-coordinator", "port": 3012 }
  ],
  "tumbler": {
    "whitelist": [
      "EXPERIENCE_RECORDED",
      "PATTERN_EMERGED",
      "LESSON_EXTRACTED",
      "OPERATION_COMPLETE",
      "HEARTBEAT"
    ]
  }
}
